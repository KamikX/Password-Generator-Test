<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/default_blue</item>
        <item name="colorPrimary">@color/default_blue</item>
        <item name="android:statusBarColor">#ff1d6ca2</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="BlueButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorButtonNormal">@color/button_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="GreenButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorButtonNormal">@color/button_green</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="OrangeButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorButtonNormal">@color/button_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AppThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/default_green</item>
        <item name="colorPrimary">@color/default_green</item>
        <item name="android:statusBarColor">@color/default_green</item>
    </style>

</resources>
